<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPaddingTop="7dp"
    app:contentPaddingBottom="7dp"
    app:contentPaddingLeft="10dp"
    app:contentPaddingRight="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">

            <!--Wallet Name-->
            <TextView
                android:id="@+id/walletTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wallet Name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLines="1"/>

            <LinearLayout
                android:id="@+id/currencyLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@id/walletTv"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currencyTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!--Notes-->
            <TextView
                android:id="@+id/walletNotesTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/currencyLl"
                android:text="Notes"
                android:textColor="@color/black"
                android:maxLines="2"/>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete_white"
            android:background="@drawable/shape_button03"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>