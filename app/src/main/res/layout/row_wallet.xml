<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    card_view:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingEnd="9dp"
        android:paddingStart="11dp"
        android:background="@drawable/background_with_shadow">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp">

            <LinearLayout
                android:id="@+id/walletLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/flagBtn"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="4dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/flag_empty"
                    android:background="@drawable/shape_button03"/>

                <!--Wallet Name-->
                <TextView
                    android:id="@+id/walletTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxWidth="260dp"
                    android:text="Wallet Name"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:maxLines="1"/>

            </LinearLayout>

            <!--currency name and symbol-->
            <LinearLayout
                android:id="@+id/currencyLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@id/walletLl"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currencyTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Currency"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/currencyCodeTv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="USD"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!--wallet total income-->
            <LinearLayout
                android:id="@+id/walletTotalIncomeLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@id/currencyLl"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelTotalIncomeTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:text="@string/total_income"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/totalIncomeTv"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0.0"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!--wallet total expenses-->
            <LinearLayout
                android:id="@+id/walletTotalExpensesLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@id/walletTotalIncomeLl"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelTotalExpensesTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:text="@string/total_expenses"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/totalExpensesTv"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0.0"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!--wallet balance-->
            <LinearLayout
                android:id="@+id/walletBalanceLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@id/walletTotalExpensesLl"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelBalanceTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/balance"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/balanceTv"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0.0"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!--Notes-->
            <TextView
                android:id="@+id/walletNotesTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/walletBalanceLl"
                android:text="Notes"
                android:textColor="@color/black"
                android:maxLines="3"/>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete_white"
            android:background="@drawable/shape_button03"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>