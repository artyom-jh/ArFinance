<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPaddingTop="7dp"
    app:contentPaddingBottom="7dp"
    app:contentPaddingLeft="10dp"
    app:contentPaddingRight="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:id="@+id/dateAndAmountLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/operDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="dd/MM/yyyy"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <ImageButton
                    android:id="@+id/attachBtn"
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_attach_small"
                    android:background="@drawable/shape_button03"/>

                <TextView
                    android:id="@+id/operAmountTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="0.0"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!--Category-->
            <TextView
                android:id="@+id/categoryTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateAndAmountLl"
                android:maxLines="1"
                android:text="Category Title"
                android:textColor="@color/black" />

            <!--Notes-->
            <TextView
                android:id="@+id/operNotesTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/categoryTv"
                android:text="Notes"
                android:textColor="@color/black"
                android:maxLines="3"/>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_delete_white"
            android:background="@drawable/shape_button03"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>