<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:contentPaddingTop="7dp"
    app:contentPaddingBottom="7dp"
    app:contentPaddingLeft="10dp"
    app:contentPaddingRight="9dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    card_view:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/background_with_shadow">

        <!--Schedule Title-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginEnd="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:background="@drawable/shape_button_above">

            <TextView
                android:id="@+id/scheduleNameTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="5dp"
                android:text="Schedule Title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLines="1"/>

            <Switch
                android:id="@+id/scheduleEnabledSw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:button="@drawable/selector_switch"
                android:thumb="@android:color/transparent"
                android:background="@android:color/transparent"
                android:textOff="No"
                android:textOn="Yes"
                android:checked="false"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <!--Schedule Start Date-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:paddingStart="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Start date"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/scheduleStartDateTv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:gravity="right"
                android:text="dd/MM/yyyy"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!--Wallet-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:paddingStart="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Wallet"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/scheduleWalletTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="7dp"
                android:gravity="right"
                android:text="Wallet 01"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!--Operation Type-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:paddingStart="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Type"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/scheduleTypeTv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:gravity="right"
                android:text="Income"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!--Category-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:paddingStart="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Category"
                android:textColor="@color/black"/>

            <!--delete-->
            <TextView
                android:id="@+id/scheduleCategoryTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="7dp"
                android:gravity="right"
                android:text="Salary"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!--Amount-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:paddingStart="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Amount"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/scheduleAmountTv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:gravity="right"
                android:text="0.0"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!--Period-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:paddingStart="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Period"
                android:textColor="@color/black"/>

            <!--delete-->
            <TextView
                android:id="@+id/schedulePeriodTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="7dp"
                android:gravity="right"
                android:text="Monthly"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!--Delete-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp">

            <!--delete-->
            <ImageButton
                android:id="@+id/deleteBtn"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:src="@drawable/ic_delete_white"
                android:background="@drawable/shape_button_below"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>